#!/usr/bin/env ruby -w

require 'pathify'

begin
  raise RuntimeError unless ARGV[0]

  args = ARGV[0].split(':')
  klass = args.shift
  
  path = Cdto.const_get(klass.capitalize).new(args.join(':'))
  header = "Looking for #{ARGV[0]}"
  separator = ""

  header.length.times do
    separator += '-'
  end

  puts header
  puts separator
  puts path
rescue
  puts "No path found."
end
